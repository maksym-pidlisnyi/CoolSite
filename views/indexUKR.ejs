<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
    <script crossorigin src="https://unpkg.com/react@16/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@16/umd/react-dom.production.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-standalone/6.25.0/babel.min.js"></script>
    <title><%= title %></title>
</head>
<body>

<!-- Navigation -->
<%- include('headerMenuUKR', {title: title, menuTopics: menuTopics, menuTopicsUKR: menuTopicsUKR,
menuTheme: menuTheme, menuColor: menuColor, domain: domain}) -%>

<!-- Page Content -->
<div style="margin: 2%; display:flex">
    <div style="float: left; width: 60%; margin-right: 2%">
        <% var s = "body" + title.replace(" ", "") + "UKR"; %>
        <%- include(s) -%>
    </div>
    <div style="height: max-content; float: right;  border: 2px solid mediumblue; width: 39%; padding: 1%; ">
        <form action="/sendFormUKR" method="post" style="width: 100%">
            <h5 style="font-weight: bold; text-align: center; background-color: #7db1bf">Форма заявки</h5>
            <div class="form-group">
                <label for="firstName">Ваше ім'я:</label>
                <input type="text" minlength="1" id="firstName" name="firstName" class="form-control">
            </div>
            <div class="form-group">
                <label for="lastName">Ваше прізвище:</label>
                <input type="text" minlength="1" id="lastName" name="lastName" class="form-control">
            </div>
            <div class="form-group">
                <label for="email">Ваше e-mail:</label>
                <input type="email" id="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="phone">Телефон (формат +38 (xxx) xxxxxxx):</label>
                <input type="tel" id="phone" name="phone" class="form-control">
            </div>
            <div class="form-group">
                <label for="formText">Текст заявки</label>
                <textarea id="formText" minlength="1" name="formText" class="form-control"></textarea>
            </div>
            <div class="form-group text-center">
                <input id="submitForm" style="width: 100%" type="submit" class="btn btn-success" value="Подати заявку">
            </div>
        </form>
    </div>
</div>

<!-- Optional JavaScript; choose one of the two! -->
<script>
    const firstName = document.getElementById("firstName");
    const lastName = document.getElementById("lastName");
    const email = document.getElementById("email");
    const phone = document.getElementById("phone");
    const formText = document.getElementById("formText");
    const button = document.getElementById("submitForm");

    let phoneRegex = /^(\+380)(50|66|67|98|97|96|68|39|63|93|99|95){1}[0-9]{7}$/
    function isPhoneValid(phone) {
        return phoneRegex.test(String(phone));
    }

    firstName.addEventListener("change", function (event){
        if (firstName.value.length <= 1) {
            firstName.setCustomValidity("Введіть принаймі два символи!");
            firstName.style.borderColor = "red";
        } else {
            firstName.style.borderColor = "";
            firstName.setCustomValidity("");
            button.removeAttribute("disabled");
            // button.removeAttribute("disabled");
            // disableBtn()
        }
    });
    lastName.addEventListener("change", function (event){
        if (lastName.value.length <= 1) {
            lastName.setCustomValidity("Введіть принаймі два символи!");
            lastName.style.borderColor = "red";
        } else {
            lastName.style.borderColor = "";
            lastName.setCustomValidity("");
            button.removeAttribute("disabled");
            // button.removeAttribute("disabled");
            // disableBtn()
        }
    });
    email.addEventListener("change", function (event){validation(email, "Введіть коректну пошту!")});
    phone.addEventListener("change", function (event){
        if (!isPhoneValid(phone.value)) {
            phone.setCustomValidity("Введіть телефон в коректному форматі!");
            phone.style.borderColor = "red";
        } else {
            phone.style.borderColor = "";
            phone.setCustomValidity("");
            button.removeAttribute("disabled");
            // disableBtn()
        }
    });
    formText.addEventListener("change", function (event){
        if (formText.value.length <= 1) {
            formText.setCustomValidity("Введіть принаймі два символи!");
            formText.style.borderColor = "red";
        } else {
            formText.style.borderColor = "";
            formText.setCustomValidity("");
            button.removeAttribute("disabled");
            // button.removeAttribute("disabled");
            // disableBtn()
        }
    });
    button.addEventListener("click", function (event) {
        // if (!allFilled()) {
        //     alert("Fill all fields correctly!");
        // }
        disableBtn();
    });

    function validation (btn, message) {
        if (btn.validity.typeMismatch) {
            btn.setCustomValidity(message);
            btn.style.borderColor = "red";
        } else {
            btn.style.borderColor = "";
            btn.setCustomValidity("");
            button.removeAttribute("disabled");
            // disableBtn()
        }
    }

    function allFilled (inputs) {
        let filled = true;
        for (let input of inputs) {
            filled = filled && (input.value.length > 1);
        }
        return filled;
    }

    function disableBtn() {
        let inputs = [firstName, lastName, email, phone, formText];
        if (!allFilled(inputs)) {
            alert("Заповніть всі поля коректно!");
            button.setAttribute("disabled", "true");
        } else button.removeAttribute("disabled");
    }
</script>
<!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</body>
</html>